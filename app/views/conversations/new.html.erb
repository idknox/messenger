<%= form_for @message, url: user_conversations_path do |f| %>
  <div>
  <%= f.label 'To: ' %>
  <%= f.fields_for :conversation do |conversation| %>
    <%= conversation.select :receiver, @recipients %>
  <% end %>
  </div>
  <div>
  <%= f.text_area :body, rows: 4 %>
  </div>
<div>
  <%= f.submit 'Send Message' %>
</div>
<% end %>