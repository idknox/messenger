<%= link_to 'Start a new conversation', new_user_conversation_path(current_user.id) %>
<%= link_to 'Logout', signout_path %>
<h2>Conversations</h2>
<ul>

  <% @conversations.each do |conversation| %>
    <li>
      Conversation between <%= "#{conversation.sender.name} and #{conversation.receiver.name}" %>
    </li>
    <ul>
      <% conversation.messages.each do |message| %>
        <li>
          <b>From <%= message.author.name %></b>
          <%= message.body %>
        </li>
      <% end %>
    </ul>
    <%= form_for @message, url: user_conversation_messages_path(current_user.id, conversation.id) do |f| %>
      <%= f.text_area :body %>
      <%= f.submit 'Reply' %>
    <% end %>
  <% end %>
</ul>
